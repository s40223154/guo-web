html, js, css
-->

<body>
    <div id="chart"></div>
    <main>
        <table>
            <thead>
                <tr>
                    <th>FeCO2(%)</th>
                    <th>FeO2(%)</th>
                    <th>Flow(L/min)</th>
                    <th>t(s)</th>
                    <th>VO2(%)</th>
                    <th>VCO2(%)</th>
                </tr>
            </thead>
            <tbody id="table-data">

            </tbody>
        </table>
    </main>
</body>

<script>
    var i = 0;
    setInterval(function() {
        i++;
        $('#table-data').prepend(
            `
            <tr>
                <td data-label="FeCO2">
                    3.88
                </td>
                <td data-label="FeO2">
                    16.66
                </td>
                <td data-label="Flow">
                    9.1
                </td>
                <td data-label="t">
                    00.03
                </td>
                <td data-label="VO2">
                    <span class="no">&#10007;</span>
                </td>
                <td data-label="VCO2">
                    <span class="no">&#10007;</span>
            </tr>
        `
        );
    }, 1000);
</script>

<script src="/js/graph.js" charset="utf-8"></script>
<script src="/js/table.js" charset="utf-8"></script>

</html>
